<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_alt" xsi:type="string">Baza Avtozvuka</argument>
                <argument name="logo_img_width" xsi:type="number">161</argument>
                <argument name="logo_img_height" xsi:type="number">57</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="report.bugs" remove="true"/>

        <referenceBlock name="footer_links" remove="true" />

        <referenceContainer name="header-wrapper">
            <block name="header.content.custom" template="Magento_Theme::header.content.custom.phtml" />
        </referenceContainer>

        <referenceBlock name="my-account-link" remove="true" />

        <referenceContainer name="header.panel">
            <block name="header.panel.custom.links" template="Magento_Theme::header.panel.custom.links.phtml" />
            <block name="header.panel.custom.city" template="Magento_Theme::header.panel.custom.city.phtml" />
        </referenceContainer>
    </body>
</page>
